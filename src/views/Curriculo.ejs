<!DOCTYPE html>
<html lang="pt-br">

<head>
    <%- include('partials/head') %>

    <title>Currículo - Portal de Oportunidades</title>
    <link rel="stylesheet" href="/CSS/curriculo.css">
    
</head>

<body>
    <%- include('partials/navbar') %>

    <main class="container my-5">
        <h1 class="text-center mb-4">Preencha seu Currículo</h1>

        <form id="curriculo-form" action="/curriculo/salvar" method="POST" class="needs-validation" novalidate>

            <section class="card shadow mb-4" aria-labelledby="info-pessoais-heading">
                <div class="card-header" id="info-pessoais-heading">
                    Informações Pessoais
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="nome" class="form-label">Nome Completo</label>
                        <input type="text" class="form-control" id="nome" name="nome" required
                            value="<%= locals.curriculo?.nome || locals.user?.nome || '' %>">
                    </div>
                    <div class="mb-3">
                        <label for="cpf" class="form-label">CPF</label>
                        <input type="text" class="form-control" id="cpf" name="cpf" required onblur="checarCPF(this)"
                            placeholder="000.000.000-00" maxlength="14"
                            value="<%= locals.curriculo?.cpf || '' %>">
                        <div id="feedback-cpf" class="invalid-feedback small mt-1">CPF inválido. Por favor, verifique os
                            dígitos.</div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="email" class="form-label">Email</label>
                            <input type="email" class="form-control" id="email" name="email" required
                                value="<%= locals.curriculo?.email || locals.user?.email || '' %>">
                            <div id="feedback-email" class="invalid-feedback small mt-1">O formato do e-mail não é
                                válido.</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="telefone" class="form-label">Telefone</label>
                            <input type="text" class="form-control" id="telefone" name="telefone"
                                placeholder="(00) 00000-0000" required
                                value="<%= locals.curriculo?.telefone || '' %>">
                            <div id="feedback-email" class="invalid-feedback small mt-1">O formato do telefone não é
                                válido.</div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label for="cidade" class="form-label">Cidade</label>
                            <input type="text" class="form-control" id="cidade" name="cidade" required
                                value="<%= locals.curriculo?.cidade || '' %>">
                        </div>
                        <div class="col-md-6 mb-3">
                            <label for="linkedin" class="form-label">LinkedIn (URL)</label>
                            <input type="url" class="form-control" id="linkedin" name="linkedin"
                                value="<%= locals.curriculo?.linkedin || '' %>">
                        </div>
                    </div>
                    
                    <div>
                        <label class="form-label">Status</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="status" id="disponivel" value="disponivel"
                                <%= (locals.curriculo?.status === 'disponivel') ? 'checked' : '' %>>
                            <label class="form-check-label" for="disponivel">Disponível</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="status" id="nao-disponivel" value="nao-disponivel"
                                <%= (locals.curriculo?.status === 'nao-disponivel') ? 'checked' : '' %>>
                            <label class="form-check-label" for="nao-disponivel">Não disponível</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="status" id="aberto-a-propostas" value="aberto-a-propostas"
                                <%= (locals.curriculo?.status === 'aberto-a-propostas') ? 'checked' : '' %>>
                            <label class="form-check-label" for="aberto-a-propostas">Aberto a propostas</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="status" id="em-transicao" value="em-transicao"
                                <%= (locals.curriculo?.status === 'em-transicao') ? 'checked' : '' %>>
                            <label class="form-check-label" for="em-transicao">Em transição de carreira</label>
                        </div>
                    </div>
                </div>
            </section>

            <section class="card shadow mb-4" aria-labelledby="resumo-heading">
                <div class="card-header" id="resumo-heading">
                    Resumo Profissional
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="resumo" class="form-label">Descreva suas principais qualificações e objetivos</label>
                        <textarea class="form-control" id="resumo" name="resumo" rows="5"><%= locals.curriculo?.resumo || '' %></textarea>
                    </div>
                </div>
            </section>

            <section class="card shadow mb-4" aria-labelledby="formacao-heading">
                <div class="card-header" id="formacao-heading">
                    Formação Acadêmica
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="curso" class="form-label">Nome do Curso</label>
                        <input type="text" class="form-control" id="curso" name="curso" required
                            value="<%= locals.curriculo?.curso || '' %>">
                    </div>
                    <div class="mb-3">
                        <label for="faculdade" class="form-label">Nome da Faculdade/Instituição</label>
                        <input type="text" class="form-control" id="faculdade" name="faculdade" required
                            value="<%= locals.curriculo?.faculdade || '' %>">
                    </div>
                    <div>
                        <label class="form-label">Status do Curso</label>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="status-curso" id="em-andamento" value="em-andamento"
                                <%= (locals.curriculo?.statusCurso === 'em-andamento') ? 'checked' : '' %>>
                            <label class="form-check-label" for="em-andamento">Em andamento</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="status-curso" id="concluido" value="concluido"
                                <%= (locals.curriculo?.statusCurso === 'concluido') ? 'checked' : '' %>>
                            <label class="form-check-label" for="concluido">Concluído</label>
                        </div>
                        <div class="form-check">
                            <input class="form-check-input" type="radio" name="status-curso" id="nao-finalizado" value="nao-finalizado"
                                <%= (locals.curriculo?.statusCurso === 'nao-finalizado') ? 'checked' : '' %>>
                            <label class="form-check-label" for="nao-finalizado">Não Finalizado</label>
                        </div>
                    </div>
                </div>
            </section>

            <section class="card shadow mb-4" aria-labelledby="experiencia-heading">
                <div class="card-header" id="experiencia-heading">
                    Última Experiência Profissional
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label for="cargo" class="form-label">Cargo</label>
                        <input type="text" class="form-control" id="cargo" name="cargo"
                            value="<%= locals.curriculo?.cargo || '' %>">
                    </div>
                    <div class="mb-3">
                        <label for="empresa" class="form-label">Nome da Empresa</label>
                        <input type="text" class="form-control" id="empresa" name="empresa"
                            value="<%= locals.curriculo?.empresa || '' %>">
                    </div>
                    <div class="mb-3">
                        <label for="tempo-empresa" class="form-label">Tempo de Experiência</label>
                        <select class="form-select" id="tempo-empresa" name="tempo-empresa">
                            <option value="" <%= (!locals.curriculo?.tempoExperiencia) ? 'selected' : '' %>>Selecione...</option>
                            <option value="menos-de-1" <%= (locals.curriculo?.tempoExperiencia === 'menos-de-1') ? 'selected' : '' %>>Menos de 1 ano</option>
                            <option value="1-3" <%= (locals.curriculo?.tempoExperiencia === '1-3') ? 'selected' : '' %>>1 a 3 anos</option>
                            <option value="3-5" <%= (locals.curriculo?.tempoExperiencia === '3-5') ? 'selected' : '' %>>3 a 5 anos</option>
                            <option value="mais-de-5" <%= (locals.curriculo?.tempoExperiencia === 'mais-de-5') ? 'selected' : '' %>>Mais de 5 anos</option>
                        </select>
                    </div>
                </div>
            </section>

            <section class="card shadow mb-4" id="competencias-habilidades" aria-labelledby="habilidades-heading">
                <div class="card-header" id="habilidades-heading">
                    Competências e Habilidades
                </div>
                <div class="card-body">
                    <input type="hidden" id="habilidades-hidden" name="habilidades" 
                        value="<%= (locals.curriculo && curriculo.habilidades) ? curriculo.habilidades : '[]' %>">
                        
                    <label for="habilidade-input" class="form-label">Adicionar Habilidade</label>
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" id="habilidade-input"
                            placeholder="Ex: HTML, CSS, Trabalho em equipe">
                        <button class="btn btn-outline-primary" type="button"
                            onclick="adicionarHabilidade()">Adicionar</button>
                    </div>
                    <div id="habilidades-lista"></div>
                </div>
            </section>

            <div class="text-center">
                <button type="submit" class="btn btn-primary btn-lg">Enviar Currículo</button>
            </div>
        </form>
    </main>

    <%- include('partials/footer') %>

    <script src="https://unpkg.com/imask" defer></script>
    <script src="/JS/mascaras.js" defer></script>
    <script src="/JS/adicionarHabilidade.js" defer></script>
    <script src="/JS/validarCPF.js" defer></script>
    <script src="/JS/validation.js" defer></script>

</body>

</html>